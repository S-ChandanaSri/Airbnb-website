<% layout("/layout/boilerplate") %> 

<body>
    <form id="listingForm" method ="POST" enctype="multipart/form-data" class="needs-validation" action="/listings">
        <div class="row">
            <p class="h2" style="text-align: center; text-decoration: underline;">Rent a Room</p>
            <div class="col-8 offset-2">
                <div class="mb-4">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]"placeholder="title" class="form-control" type="text" required>
                    <div class="valid-feedback">title looks good</div>
                </div>
                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <input name="listing[description]" placeholder="description" class="form-control" type="text" required>
                    <div class="invalid-feedback">please enter description</div>
                </div>
                <div class="mb-4">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" class="form-control" type="file" >
        
                </div>
                <div class="mb-4">
                    <label for="amenities" class="form-label">Amenities</label>
                    <input name="listing[amenities]" placeholder="amenities" class="form-control" type="text" required>
                    <div class="invalid-feedback">please enter amenities</div>
                </div>
                <div class="input-group mb-4">
                    <span class="input-group-text">&#8377;</span>
                    <input name="listing[price]" placeholder="Price" class="form-control" type="number" required>
                    <span class="input-group-text">.00</span>
                    <div class="invalid-feedback">please enter price</div>
                </div>
                <div class="mb-4">
                    <label for="gender" class="form-label">Gender</label>
                    <select id="gender" name="listing[gender]" class="form-select" required>
                        <option value="" disabled selected>Select gender</option>
                        <option value="female">&#9792; Female</option> 
                        <option value="male">&#9794; Male</option>     
                    </select>
                    <div class="invalid-feedback">Please select a gender</div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <label for="minDate" class="form-label">Select Available Date</label>
                        <input id="minDate" name="listing[minDate]" class="form-control" type="datetime-local" required>
                        <div class="invalid-feedback">Please select an available date</div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <label for="maxDate" class="form-label">Select Available Date</label>
                        <input id="maxDate" name="listing[maxDate]" class="form-control" type="datetime-local" required>
                        <div class="invalid-feedback">Please select an available date</div>
                    </div>

                </div>
                
                
                <div class="mb-4">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="location" class="form-control" type="text" required>
                    <div class="invalid-feedback">please enter location</div>
                </div>
                <div class="mb-4">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="country" class="form-control" type="text" required>
                    <div class="invalid-feedback">please enter country</div>
                </div>  
                <div class="login-button-container">
                <button type="submit" class="btn btn-primary">submit</button>
                </div>
            </div>
            
        </div>
       
    
    </form>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        config={
    enableTime: true,
    dateFormat: "Y-m-d H:i",
    altInput: true,
    altFormat: "F j, Y",
}
        flatpickr("input[type=datetime-local]", config);


        document.getElementById("listingForm").addEventListener("submit", function(event) {
        var selectedGender = document.getElementById("gender").value;
        if (selectedGender !== "female") {
            event.preventDefault();
            alert("Only females are allowed"); 
        }
    });
    </script>
    
</body>