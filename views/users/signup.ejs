<% layout("/layout/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on wanderlast</h1>

    <div class="col-6 offset-3 metho">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" id="username" class="form-control" type="text" required>
                <div class="valid-feedback"> looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input name="email" id="email" class="form-control" type="text" required>

            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input name="password" id="password" class="form-control" type="text" required>

            </div>
            <button class="btn btn-success">Signup</button>
        </form>

    </div>
</div>